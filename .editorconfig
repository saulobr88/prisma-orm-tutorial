# Top-most EditorConfig file
root = true

# Todos os arquivos
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Arquivos Python
[*.py]
indent_size = 4

# Arquivos HTML
[*.html]
indent_style = space
indent_size = 4

# Arquivos CSS e SCSS
[*.css, *.scss]
indent_style = space
indent_size = 2

# Arquivos JavaScript
[*.js, *.ts]
indent_style = space
indent_size = 2

# Arquivos JSON
[*.json]
indent_style = space
indent_size = 2

# Ignore paths
[/node_modules/*, /.data/*, /*_mds/*]
generated_code = true
